package de.upb.crypto.zeroknowledge.helpers;

public enum Type {
	BOOLEAN,
	GROUP_ELEMENT,
	EXPONENT,
	UNKNOWN;
	
	public static Type convert(String type) {
		switch(type) {
			case "boolean":
				return Type.BOOLEAN;
			case "GroupElementExpression":
			case "GroupElementLiteralExpr":
				return Type.GROUP_ELEMENT;
			case "ExponentExpr":
			case "ExponentLiteralExpr":
				return Type.EXPONENT;
			default:
				return Type.UNKNOWN;
		}
	}
	
	public static Type toReturnType(Type type) {
		switch(type) {
			case BOOLEAN: return "boolean";
			case GROUP_ELEMENT: return "GroupElementExpr";
			case EXPONENT: return "ExponentExpr";
			default: return "void";
		}
	}
}

